<resources>

    <!-- Base application theme. -->
    <style name="AppTheme1" parent="Theme.AppCompat.Light.NoActionBar" xmlns:tools="http://schemas.android.com/tools">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/violet</item>
        <item name="colorAccent">@color/violet</item>

    </style>

    <style name="BlackStatusBar" parent="AppTheme1">
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme1">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#673AB7</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="dropdownmenutheme" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:popupBackground">@color/white</item>
    </style>

</resources>
